{% extends "base.njk" %}

{% block content %}
    <div class="card">
        <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
            <h1 class="display-4">Membership Plans</h1>
        </div>

        <div class="container">
            <div class="card-deck mb-3 text-center">
                <div class="card mb-4 shadow-sm">
                    <div class="card-header {{ 'bg-primary text-white' if membership == 'FREE' }}">
                        <h4 class="my-0 font-weight-normal">Free</h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title">$0 <small class="text-muted">/ mo</small></h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Ads included</li>
                            <li>Plenty of vulnerabilities</li>
                        </ul>
                    </div>
                </div>
                <div class="card mb-4 shadow-sm">
                    <div class="card-header {{ 'bg-primary text-white' if membership == 'PRO' }}">
                        <h4 class="my-0 font-weight-normal">PRO</h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title">$8 <small class="text-muted">/ mo</small></h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>No ads</li>
                            <li>Still a lot of vulnerabilities</li>
                        </ul>
                    </div>
                </div>
            </div>


            <form method="post">
                <p>
                    Your current membership state is {{ membership }}
                </p>
                <label for="membershipInputList" class="form-label">Pick your desired new membership.</label>
                <input class="form-control" list="membershipOptions" id="membershipInputList" name="membershipText"
                       placeholder="Type to search...">
                <datalist id="membershipOptions">
                    <option value="FREE">FREE</option>
                    <option value="PRO" selected>PRO</option>
                </datalist>

                <div class="col-md-12 text-center py-5 mt-5">
                    <button class="btn btn-primary"
                            formaction="{{ extendURL('/membership/' + username) }}"
                            type="submit"
                            name="postMembership">
                        Update membership plan
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
